





@model test_ngo.Models.Volunteer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Volunteer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* HIDDEN FIELDS, DO NOT MAKE UNHIDDEN *@
            <input asp-for="UserID" type="hidden" value="@Model.UserID" />
            <input asp-for="EventID" type="hidden" value="0" />
            <input asp-for="Status" type="hidden" value="Pending" />
            <input asp-for="Feedback" type="hidden" value="NULL" />

            <div class="form-group">
                <label asp-for="VolunteerName" class="control-label"></label>
                <input asp-for="VolunteerName" class="form-control" />
                <span asp-validation-for="VolunteerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolunteerSurname" class="control-label"></label>
                <input asp-for="VolunteerSurname" class="form-control" />
                <span asp-validation-for="VolunteerSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolunteerEmail" class="control-label"></label>
                <input asp-for="VolunteerEmail" class="form-control" />
                <span asp-validation-for="VolunteerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

