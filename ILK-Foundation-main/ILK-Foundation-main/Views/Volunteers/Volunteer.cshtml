@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Apply";
}


<!DOCTYPE html>
<html>

<head>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans:wght@400;700&display=swap" rel="stylesheet">
    <title>Volunteer</title>
    <link rel="stylesheet" href="main.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/332a215f17.js" crossorigin="anonymous"></script>
</head>
<style>

    h1 {
        font-family: 'Open Sans', sans-serif;
        text-align: center;
        font-size: 3.25rem;
        font-weight: 750;
        margin-top: 90px;
    }

    .image img {
        height: 300px;
        width: 100%;
        margin-top: 39px;
    }

    .p1 {
        font-family: 'Open Sans', sans-serif;
        font-weight: 500;
        text-align: center;
        font-size: 25px;
        margin-top: 40px;
        padding-top: 30px;
    }

    h2 {
        font-family: 'Poppins', sans-serif;
        font-size: 3.25rem;
        font-weight: 640px;
        text-align: center;
        margin-top: 90px;
    }

    .center-container {
        padding-top: 5px;
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
        font-family: 'Poppins', 'sans-serif';
    }

        .center-container h3 {
            padding-left: 50px;
        }

    .circle-image {
        width: 250px; /* Set the width of the image */
        height: 250px; /* Set the height of the image */
        border-radius: 49%; /* Make the image a circle */
        object-fit: cover; /* Ensure the image covers the element completely */
        margin-top: 70px;
    }

    .center {
        width: 550px;
        margin-top: 50px;
    }


    h3 {
        font-family: 'Poppins', sans-serif;
        font-size: 2.5rem;
        padding-top: 30px;
    }

    .p2 {
        font-family: 'Poppins', 'sans-serif';
        margin-left: 51px;
        font-size: 20px;
        font-weight: 500;
    }

    .greenCard {
        background: #90EE90;
        height: 450px;
        margin-top: 100px; /* Preserve the top margin */
        margin-bottom: 0; /* Bottom margin set to 0 */
        margin-left: auto; /* Center horizontally */
        margin-right: auto;
        width: 95%;
        border-radius: 15px;
        display: flex;
    }

    .ready {
        width =50%;
    }

        .ready p {
            font-family: 'Poppins', 'sans-serif';
            font-size: 3.25rem;
            width: 500px;
            font-weight: 700; /*Bold*/
            text-align: left;
            margin-left: 50px;
            padding-top: 30px;
        }

        .ready pre {
            margin-left: 50px;
            font-size: 23px;
            font-family: 'Poppins', 'sans-serif';
            font-weight: 505;
        }

    .greenCard img {
        width: 300px;
        height: 300px;
        margin-top: 80px;
        margin-left: 80px;
    }

    .apply-button {
        font-family: 'Poppins', 'sans-serif';
        background-color: #000000; /* Green background */
        border: none; /* Remove borders */
        color: white; /* White text */
        padding: 15px 32px; /* Some padding */
        text-align: center; /* Center the text */
        text-decoration: none; /* Remove underline */
        display: inline-block; /* Get it to display inline */
        font-size: 16px; /* Increase font size */
        margin: 4px 2px; /* Add some margin */
        cursor: pointer; /* Pointer/hand icon on hover */
        border-radius: 12px; /* Rounded corners */
        transition-duration: 0.4s; /* Transition effect duration */
        margin-left: 140px;
        margin-top: 20px;
        width: 200px;
    }

        .apply-button:hover {
            background-color: #fff44f; /* White background on hover */
            color: black; /* Black text on hover */
        }

</style>

<body>
    <!--Navbar code-->
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="@Url.Action("Index", "Home")">
                <span class="logo">ILK FOUNDATION</span>
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                    data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                    aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars ml-1"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#helpus">Help Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#project">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#team">
                            Upcoming
                            Events
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Volunteer", "Volunteers")">Volunteer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Donates" asp-action="Donate">Donate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#testimonials">Testimonials</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!--End of navbar code-->

    <h1>Volunteer to Make a Positive Impact</h1>
    <div class="image">
        <img src="~/css/images/volunteer.jpg" alt="Image">
    </div>

    <!--Why volunteer section-->
    <h2>Why Volunteer With Us?</h2>
    <!--Reason 1-->
    <div class="center-container">
        <img src="~/css/images/impact.jpg" alt="Image" class="circle-image">
        <div class="center">
            <h3>Meaningful Impact</h3>
            <p class="p2">Contribute to projects and initiatives that have a positive impact on the community.</p>
        </div>
    </div>
    <!--Reason 2-->
    <div class="center-container">
        <img src="~/css/images/skills.jpg" alt="Image" class="circle-image">
        <div class="center">
            <h3 style="margin-right:110px;">Skill Development</h3>
            <p class="p2">Enhance your skills and gain valuable experience.</p>
        </div>
    </div>
    <!--Reason 3-->
    <div class="center-container">
        <img src="~/css/images/connection.jpg" alt="Image" class="circle-image">
        <div class="center">
            <h3>Community Connection</h3>
            <p class="p2">
                Join a community of like-minded individuals who
                are commited to making a difference.
            </p>
        </div>
    </div>
    <p class="p1">
        Volunteering with our organization significantly enhances our ability to assist more individuals, undertake sustainable projects, and reach out to underserved communities.
    </p>

    <!-- Green card section -->
    <div class="greenCard">
        <div class="ready">
            <p>Ready to Make a Difference?</p>
            <pre>Thank you for considering to join us on this
    journey to create positive change. Together, 
    we can leave a lasting impact and build a
    better future for this community.</pre>

            @if (User.Identity.IsAuthenticated)
            {
                var user = User.Identity.Name; // Assuming username is enough for your logic
                var volunteer = Model; // Assuming Model is passed correctly from the controller

                if (volunteer != null)
                {
                    if (volunteer.Status == "Pending")
                    {
                        <button type="button" class="apply-button" disabled>Application Pending</button>
                        <p style="color: red; font-size: 0.9rem;">Application Pending</p>
                    }
                    else if (volunteer.Status == "Accepted")
                    {
                        <button type="button" class="apply-button" disabled>You are already a Volunteer</button>
                        <p style="color: red; font-size: 0.9rem;">You are already a Volunteer</p>
                    }
                    else
                    {
                        <form action="/Volunteers/Create" method="get">
                            <button type="submit" class="apply-button">Apply</button>
                        </form>
                    }
                }
                else
                {
                    <form action="/Volunteers/Create" method="get">
                        <button type="submit" class="apply-button">Apply</button>
                    </form>
                }
            }
            else
            {
                <button type="button" class="apply-button" disabled>Log in to Apply</button>
            }

        </div>
        <img src="~/css/images/flower.png">
    </div>

    <!-- Bootstrap JS and jQuery (if needed) -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha384-ZvpUoO/+PpD4ePbUcgOS+63G2Tc/Nph+HTEfhMxZZfB00pmpKVQTnEcf6arIH2iJ"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
            integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
            crossorigin="anonymous"></script>
</body>

</html>