<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans:wght@400;700&display=swap" rel="stylesheet">
    <title>Donate</title>
    <link rel="stylesheet" href="main.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/332a215f17.js" crossorigin="anonymous"></script>
</head>

<style>
    body {
        background-color: #ff6961;
    }

    .p1 {
        font-family: 'Open Sans', sans-serif;
        font-weight: 540;
        text-align: center;
        width: 800px;
        font-size: 25px;
        margin: 0 auto;
    }

    .donation-card {
        display: flex;
        align-items: center;
        background-color: white;
        /* Green color */
        padding: 10px;
        /* Adjust padding as needed */
        margin-top: 100px;
        margin-bottom: 20px;
        margin-left: 22px;
        margin-right: 20px;
        width: 100%;
        height: 550px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        /* Box shadow */
    }

        .donation-card img {
            height: 445px;
            padding: 10px;
            width: 50%;
            margin-left: 40px;
        }

    .card-details p {
        text-align: left;
        width: 470px;
        margin-left: 20px;
        font-size: 20px;
        margin-top: 20px;
    }

    h2 {
        font-family: 'Open Sans', sans-serif;
        font-weight: 700;
        /*Bold*/
        margin-left: 20px;
        color: #ff6961;
    }

    h3 {
        font-family: 'Open Sans', sans-serif;
        margin-left: 20px;
        margin-top: 20px;
        font-weight: 545;
        width: 350px;
    }

    .donate-button {
        font-family: 'Poppins', 'sans-serif';
        background-color: #000000;
        /* Green background */
        border: none;
        /* Remove borders */
        color: white;
        /* White text */
        padding: 15px 32px;
        /* Some padding */
        text-align: center;
        /* Center the text */
        text-decoration: none;
        /* Remove underline */
        display: inline-block;
        /* Get it to display inline */
        font-size: 16px;
        /* Increase font size */
        margin: 4px 2px;
        /* Add some margin */
        cursor: pointer;
        /* Pointer/hand icon on hover */
        border-radius: 12px;
        /* Rounded corners */
        transition-duration: 0.4s;
        /* Transition effect duration */
        margin-left: 20px;
        margin-top: 20px;
        width: 200px;
    }

        .donate-button:hover {
            background-color: #ff6961;
            /* White background on hover */
            color: white;
            /* Black text on hover */
        }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4);
        padding-top: 60px;
    }

    .modal-content {
        background-color: #fefefe;
        margin: 5% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 50%; /* Set the width here */
        height: 350px; /* Set the height here */
    }

</style>

<body>
    <!-- Navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="@Url.Action("Index", "Home")">
                <span class="logo">ILK FOUNDATION</span>
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                    data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                    aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars ml-1"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#helpus">Help Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#project">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#events">
                            Upcoming
                            Events
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Volunteer", "Volunteers")">Volunteer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Donates" asp-action="Donate">Donate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#testimonials">Testimonials</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="@Url.Action("Index", "Home")#contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--End of navbar-->

    <div class="donation-card">
        <img src="~/css/images/donate_image.jpg" alt="Image">
        <div class="card-details">
            <h2>Donate Today</h2>
            <h3>Together, We Can Achieve More.</h3>
            <p class="p1">
                Your donation directly funds our organization's mission, enabling us to continue our vital work without
                interruptions. Whether it's providing educational resources for our ECD, supporting our soup kitchen, or
                sowing the seeds of hope in our community garden, your contribution goes straight to the heart of what
                we do.
            </p>
            <button id="donateButton" type="button" class="donate-button">Donate</button>
        </div>
    </div>

    <!-- Modal Structure for popup-->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div id="modalBody">
                @Html.Partial("DonatePopup")
            </div>
        </div>
    </div>

    <!-- HTML and CSS to show and hide modal -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var modal = document.getElementById("myModal");
            var btn = document.getElementById("donateButton");
            var span = document.getElementsByClassName("close")[0];

            btn.onclick = function () {
                modal.style.display = "block";
            }

            span.onclick = function () {
                modal.style.display = "none";
            }

            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        });
    </script>

</body>
</html>
